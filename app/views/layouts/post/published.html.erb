<html lang="en">
  <head>
    <title><%= @post.title %></title>
    <%= stylesheet_link_tag 'post' %>
    <% @post.additional_styles.each do |asset| %>
      <%= stylesheet_link_tag asset %>
    <% end %>
  </head>

  <body data-blog="<%= @post.blog.id %>" data-post="<%= @post.id %>">
    <%= yield %>
  </body>
</html>